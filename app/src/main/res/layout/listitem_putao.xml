<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"    
    android:background="@color/white_item_selector_linearlayout_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:focusable="false"
    android:padding="5dp"
    android:orientation="horizontal"
    >
    <ImageView 
        android:id="@+id/listitem_putao_image"
        android:focusable="false"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        />
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_weight="1"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="horizontal"
            >
             <TextView
                 android:id="@+id/listitem_putao_title"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_alignParentLeft="true"
	              android:textColor="@color/grey_light"
	              android:textStyle="bold"
	              android:text="第一个小镇"
	              />
             <!-- 点赞 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
                 <TextView
                    android:id="@+id/listitem_putao_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/grey_light"
                    android:textStyle="bold"
                    android:text="0" />
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_list_thumb"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/listitem_putao_date"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="5dp"
	       android:textColor="@color/grey_light"
	       android:textStyle="bold"
	       android:layout_alignParentLeft="true"
	       android:text="2015-1-1 12:00:00"
        />
        
    </LinearLayout>
</LinearLayout> 
</LinearLayout>