<!-- 一个测试Item -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"    
    android:orientation="vertical"
    android:background="@color/white_item_selector_linearlayout_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:focusable="false"
    android:padding="5dp"
    android:orientation="horizontal"
    >
    <ImageView 
        android:id="@+id/listitem_substown_image"
        android:focusable="false"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        />
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:focusable="false"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_weight="1"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="horizontal"
            >
             <TextView
                 android:id="@+id/listitem_substown_name"
                 android:layout_marginLeft="6dp"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_alignParentLeft="true"
	             android:textColor="@color/grey_light"
	             android:lines="1"
	             android:textStyle="bold"
	             android:text="天空之城"
	              />
            
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/iconfont_position"/>
            <TextView
                android:id="@+id/listitem_substown_location"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
               android:textColor="@color/grey_light"
               android:textStyle="bold"
               android:lines="1"
               android:text="广州市天空之城" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 
