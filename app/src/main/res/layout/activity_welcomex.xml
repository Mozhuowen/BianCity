<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:background="@color/fb_blue"
     xmlns:android="http://schemas.android.com/apk/res/android">
    
     
    <LinearLayout
        android:id="@+id/activity_welcomex_loginlayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp"
        android:background="@color/fb_blue"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentBottom="true" >
        
        <ImageView
            android:id="@+id/activity_welcome_login_sina"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/iconfont_weibo" />
        
        <ImageView
            android:id="@+id/activity_welcome_login_qq"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/iconfont_qq" />
        
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fb_blue"
        android:gravity="center_horizontal"
        android:layout_above="@id/activity_welcomex_loginlayout" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
        <ImageView
            android:id="@+id/activity_welcomex_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/ic_logo" />
        

        
        <!-- <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/biancity" /> -->
        
       <!--  <ImageView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:src="@drawable/slogan" /> -->
        
        </LinearLayout>
        
        
        
    </RelativeLayout>
     
</RelativeLayout>