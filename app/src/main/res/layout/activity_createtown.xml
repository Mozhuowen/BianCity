<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:orientation="vertical" >
  
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#ff5b5148" />
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#fff"
            >
            <LinearLayout 
                android:id="@+id/activity_createtown_picture"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_margin="5dp"
                android:background="@drawable/corners_bg"
                android:gravity="center_horizontal|center_vertical"
                >
                <TextView 
                    android:id="@+id/activity_createtown_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击选择封面照片"
                    />
            </LinearLayout>
            <TableLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:stretchColumns="1"
                android:gravity="center_horizontal|center_vertical"
                android:focusable="true"
        		android:focusableInTouchMode="true"
                >
	                <TableRow 
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:gravity="center_vertical" >
		                <TextView 
		                    android:layout_width="match_parent"
	                    	android:layout_height="wrap_content"
	                    	android:textColor="@color/Gainsboro"
		                    android:text="@string/addressinfo_str"
		                    />
		                <TextView 
		                    android:layout_width="match_parent"
	                    	android:layout_height="wrap_content"
		                    android:id="@+id/activity_createtown_geotext"
		                    android:gravity="center_vertical"
		                    android:text="@string/test_string"
		                    android:drawableLeft="@drawable/ic_location_large"
		                    />
	                </TableRow>
                </TableLayout>
                
                <!-- <EditText 
                    android:id="@+id/activity_createtown_townname"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:padding="2dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners_bg"
                    android:hint="边城名字"
                    /> -->
               <View
			        android:layout_width="match_parent"
			        android:layout_height="1px"
			        android:background="@color/Gainsboro" />
	            <EditText 
	                android:id="@+id/activity_createtown_townname"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:gravity="center_vertical"
	                android:paddingTop="10dp"
	     			android:paddingBottom="10dp"
	                android:singleLine="true"
	                android:background="@null"
	                android:hint="标题"
	                />
	            <View
			        android:layout_width="match_parent"
			        android:layout_height="1px"
			        android:background="@color/Gainsboro" />
               <!-- <EditText 
                   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:id="@+id/activity_createtown_descri"
                   android:gravity="top"
                   android:singleLine="false"
                   android:height="100dp"
                   android:padding="2dp"
                   android:layout_margin="5dp"
                   android:background="@drawable/corners_bg"
                   android:hint="可以输入150字的简介"
                   /> -->
                   <EditText 
		                android:id="@+id/activity_createtown_descri"
		                android:layout_width="match_parent"
		                android:layout_height="189dp"
		                android:scrollbars="vertical"
		                android:paddingTop="10dp"
		     			android:paddingBottom="10dp"
		                android:gravity="top"
		                android:singleLine="false"
		                android:background="@null"
		                android:hint="可以输入150字的简介"/>
                   <View
				        android:layout_width="match_parent"
				        android:layout_height="1px"
				        android:background="@color/Gainsboro" />
            
            <Button
                android:id="@+id/activity_createtown_draft"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_margin="5dp"
	            android:textStyle="bold"
	            android:text="保存到草稿箱"
	            android:textColor="@color/white"
	            android:background="@color/blue_bg_selector" />
        </LinearLayout>
        
        
        
    </ScrollView>
        
</LinearLayout>