<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#fff3f3f3"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_navigation_back_normal"
            android:onClick="backEvent"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的边城"
            android:textStyle="bold"
            android:textColor="@color/grey_light"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal|center_vertical" 
            />
    </FrameLayout>
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#ff5b5148" />

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	        
	        <!-- 封面图片区 -->
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	            
	            <ImageView 
	                android:id="@+id/activity_town_edit_cover"
	                android:layout_width="match_parent"
	                android:layout_height="230dp"
	                android:scaleType="centerCrop"
	                />
	               
	        </LinearLayout>
	        
	        <!-- 文字介绍区 -->
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	            <!-- 标题文子区 -->
	            <LinearLayout              
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:padding="5dp"
	                >
	                
	                <TextView 
	                    android:id="@+id/activity_town_edit_townname"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="葡萄小镇"
	                    android:layout_weight="1"
	                    />
	                <LinearLayout 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:orientation="horizontal"
	                    android:gravity="center_horizontal"
	                    >
	                    
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:padding="1dp"
	                        android:background="@drawable/corners_bg"
	                        android:text="查看地图 "
	                        android:textSize="12sp"
	                        />
	                </LinearLayout>
	                
	                
	            </LinearLayout>
	            <!-- 坐标展示区 -->
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:padding="5dp"
	                >
	                
	                <TextView 
	                    android:id="@+id/activity_town_edit_coordinate"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="E103°17'19'' N23°13'16''"
	                    />               
	            </LinearLayout>
	            <!-- 主人展示区 -->
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                >
	                <LinearLayout 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:gravity="center_horizontal"
	                    android:orientation="vertical"
	                    android:padding="5px"
	                    >
	                    <de.hdodenhof.circleimageview.CircleImageView
	                        android:id="@+id/activity_town_edit_headimage"
		                    xmlns:app="http://schemas.android.com/apk/res-auto"
						    android:layout_width="32dp"
						    android:layout_height="32dp"
						    app:border_width="1dp"
						    app:border_color="#FFFFFFFF"/>
	                    <TextView 
	                        android:id="@+id/activity_town_edit_username"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="AWEN"
	                        />
	                </LinearLayout>
	                <LinearLayout
	                    android:layout_width="13dp"
	                    android:layout_height="match_parent"
	                    android:padding="5dp"
	                     >
		                <View 
		                    android:layout_width="1px"
		                    android:layout_height="match_parent"
		                    android:padding="5dp"
		                    android:background="#000"
		                    />
	                </LinearLayout>
	                <LinearLayout 
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:gravity="center_horizontal|center_vertical"
	                    android:orientation="vertical"
	                    android:padding="5px"
	                    >
		                    <TextView 
		                        android:id="@+id/activity_town_edit_subscription"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_gravity="center_vertical"
		                        android:text="10894"
		                        />
		                    <TextView 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_gravity="center_vertical"
		                        android:text="粉丝数"
		                        />
	                </LinearLayout>
	                
	            </LinearLayout>
	            <!-- 标签展示区 -->
	           <!--  <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:padding="5dp"
	                >
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="标签： 温暖"
	                    />
	                
	                
	            </LinearLayout> -->
	            <!-- 简介区 -->
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:padding="5dp"
	                >
	                <TextView
	                    android:id="@+id/activity_town_edit_descri" 
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:text="简介： 欢迎来到葡萄小镇"
	                    />
	            </LinearLayout>
	            
	            <!-- <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="葡萄小镇\nE103°17'16'' N23°13'19''\n标签：90后   温暖\n简介：温暖的葡萄小镇"
	                />  -->
	               
	        </LinearLayout>
	        
	        <View 
			    android:layout_width="match_parent"
			    android:layout_height="1px"
			    android:background="#ff5b5148" />
	        <!-- 葡萄列表区 -->
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	            <!-- TAB标题-葡萄-留言板 -->
	         <LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="35dp"
	             android:orientation="horizontal"
	             >
	             <LinearLayout 
	                 android:layout_width="0dp"
	                 android:layout_height="match_parent"
	                 android:layout_weight="1"
	                 android:orientation="vertical"
	                 android:gravity="center_horizontal|center_vertical"
	                 >
	                 <TextView 
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:text="葡萄"
	                     />
	             </LinearLayout>
	             <View 
			    android:layout_width="1px"
			    android:layout_height="match_parent"
			    android:background="@color/divider_bg" />
	             <LinearLayout 
	                 android:layout_width="0dp"
	                 android:layout_height="match_parent"
	                 android:id="@+id/activity_town_messboard"
	                 android:layout_weight="1"
	                 android:orientation="vertical"
	                 android:gravity="center_horizontal|center_vertical"
	                 android:onClick="onClick"
	                 >
	                 <TextView 
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:text="留言板"/>
	             </LinearLayout>
	         </LinearLayout>
	         <View 
			    android:layout_width="match_parent"
			    android:layout_height="1px"
			    android:background="#ff5b5148" />
	         </LinearLayout><!-- 葡萄和留言列表区结束 -->
	         <!-- edit 按钮 -->
	         <LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="70dp"
	             android:gravity="center_horizontal|center_vertical"
	             >
	             <Button 
	                 android:id="@+id/activity_town_edit_btncreate"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:paddingLeft="80dp"
	                 android:paddingRight="80dp"
	                 android:text="创建葡萄" />
	         </LinearLayout>
	         <View 
			    android:layout_width="match_parent"
			    android:layout_height="1px"
			    android:background="#ff5b5148" />
	 </LinearLayout><!-- 非列表区结束 -->
	 
        <!-- 葡萄和留言列表区 -->    
         <FrameLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >
	          <ListView
	              android:id="@+id/activity_town_edit_putaolist"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" 
			        android:padding="5dp"
			        android:divider="@null" />
	    </FrameLayout>
	    
</LinearLayout> 

</ScrollView>
</LinearLayout>
